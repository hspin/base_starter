{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier", 
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier" 
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": ["error"],
        "camelcase": "error",
        "spaced-comment": "error",
        "quotes": ["error", "single"],
        "no-duplicate-imports": "error",
        "indent": [ 2, 2 ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ "error", "always" ],
        "no-console": 0,
        "no-unused-vars": 0
    }
}
